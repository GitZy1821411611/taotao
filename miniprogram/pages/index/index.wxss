/* miniprogram/pages/index/index.wxss */

.index {
  display: flex;
  flex-direction: column;
}
.index .location{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 99999;
}
.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}
.index .section-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
}
.image-list{
  padding: 10px;
  margin-top: 44px;
  background-color: #fff;
}
.index .section-image{
  width: 100px;
}
.index .section-image image{
  width: 100px;
  height: 154px;
}
.index .section-content{
  flex:1;
  background-color: #fff;
  z-index: 1;
}
.movie-title{
  color: red;
}